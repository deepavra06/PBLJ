// JAVA CODE

import java.io.IOException;
import java.io.PrintWriter;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

// This annotation maps the servlet to the URL /LoginServlet
@WebServlet("/LoginServlet")
public class LoginServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    // Hardcoded credentials for demonstration
    private static final String VALID_USERNAME = "admin";
    private static final String VALID_PASSWORD = "password123";
    
    /**
     * Handles HTTP POST requests from the login form.
     */
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        
        // 1. Retrieve the parameters from the request
        String username = request.getParameter("username");
        String password = request.getParameter("password");

        // Set content type for the response
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        // Start HTML response
        out.println("<!DOCTYPE html>");
        out.println("<html lang=\"en\">");
        out.println("<head>");
        out.println("<meta charset=\"UTF-8\">");
        out.println("<title>Login Result</title>");
        out.println("<style>");
        out.println("body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; text-align: center; padding-top: 50px; }");
        out.println(".message-box { max-width: 400px; margin: 0 auto; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); }");
        out.println(".success { background-color: #e6ffe6; border: 1px solid #00cc00; color: #007a00; }");
        out.println(".error { background-color: #ffe6e6; border: 1px solid #cc0000; color: #7a0000; }");
        out.println("h1 { margin-top: 0; }");
        out.println("a { color: #007bff; text-decoration: none; margin-top: 20px; display: inline-block; }");
        out.println("a:hover { text-decoration: underline; }");
        out.println("</style>");
        out.println("</head>");
        out.println("<body>");

        // 2. Validate the credentials
        if (VALID_USERNAME.equals(username) && VALID_PASSWORD.equals(password)) {
            // 3. If valid: Display personalized welcome message (Success)
            out.println("<div class='message-box success'>");
            out.println("<h1>Login Successful!</h1>");
            // Display personalized message
            out.println("<p>Welcome back, <strong>" + username.toUpperCase() + "</strong>! You have successfully logged into the system.</p>");
            out.println("</div>");
        } else {
            // 4. If invalid: Show an error message (Failure)
            out.println("<div class='message-box error'>");
            out.println("<h1>Login Failed</h1>");
            out.println("<p>The username or password you entered is incorrect.</p>");
            out.println("<p>Please try again.</p>");
            out.println("<a href='login.html'>&larr; Go back to Login</a>");
            out.println("</div>");
        }

        // End HTML response
        out.println("</body>");
        out.println("</html>");
    }
}
